<div class="container">
  <h1>Here are all the posts for <%= @category.title %></h1>
  <br>

  <table>
    <tr>
    <th width="20%">Title</th>
    <th width="40%">Description</th>
    <th width="10%">Price</th>
    <th width="30%">Seller</th>
    </tr>
    
    <% @posts.each do |post| %>
      <%= erb :post, :locals => { :post => post, :category => @category } %>
    <% end %>
  </table>
  <br>

  <a href="/category/<%= @category.id %>/post/new">Make New Post</a>
  <br>
  <a href="/">Back To All Categories</a>

</div>
